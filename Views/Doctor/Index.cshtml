    <div class="row row-cols-3">
    @{
        foreach (var item in Model)
        {  <div class="col mb-3">
        <div class="card" style="width: 18rem;">
                    <img src="~/images/@item.Image" class="card-img-top" alt="..." style="height: 16rem;">
    <div class="card-body">
                        <h5 class="card-title">@item.Name </h5>
                        <p class="card-text">specialization:@item.Specialization</p>
        <a href="/Appointment/Index?id=@item.Id" class="btn btn-primary">Book Appointment</a>
    </div>
                </div>
            </div>
        }
    }
    </div>
