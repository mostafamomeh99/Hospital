        @{
            if (@Model.Count != 0)
            {
        <table class="table table-dark table-striped table-hover table-responsive">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Appointment Id</th>
                    <th scope="col">Patient Name</th>
                    <th scope="col">Doctor Name </th>
                    <th scope="col">Appointment Date </th>
                    <th scope="col">Appointment Time</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                {
                    <tr class="table-dark">
                        <th scope="row">@item.AppointmentId</th>
                        <td class="table-dark">@item.PatientName</td>
                        <td class="table-dark">@item.DoctorName</td>
                            <td class="table-dark">@item.AppointmentDate.ToString()</td>
                            <td class="table-dark">@item.AppointmentTime.ToString()</td>
                    </tr>
                } }
            </tbody>
        </table>
            }
      else {<h1>There is no Appointments Yet!!</h1>} 
        }

 